
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name, :required => true %>
</div>
<div class="field">
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name, :required => true  %>
</div>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email, :required => true  %>
</div>
<div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password_digest, :required => true  %>
</div>
<div class="field">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_digest, :required => true  %>
</div>
  <button id="show-tradie-form" type="button" class="btn btn-default">I'm a tradie</button>
<div id="tradie-signup">
  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %>
  </div>
  <div class="field">
    <%= f.label :trade %><br>
    <%= f.text_field :trade %>
  </div>
  <div class="field">
    <%= f.label "Rate $per/h" %><br>
    <%= f.number_field :rate %>
  </div>
  <div class="field">
    <%= f.label :qualifications %><br>
    <%= f.text_area :qualifications %>
  </div>

</div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>

<script>
  $('document').ready(function () {
    $("#show-tradie-form").on('click',function(){
        console.log("hello");
        $("#tradie-signup").toggle(500);
    });
});


</script>
