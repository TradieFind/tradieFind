      <script type="text/template" id='userViewTemplate'>
        <!-- View their own profile and show their current and past reservations-->
        <div class="userProfile">
        <h2>{{= current_user.first_name }}'s profile</h2>
        <p>First Name: {{= current_user.first_name }}</p>
        <p>Last Name:{{= current_user.last_name }}</p>
        <p>Email: {{= current_user.email }}</p>
        <p>Address: {{= current_user.address_one }}</p>
        <p>Joined: {{= current_user.created_at }}</p>
        <p>
          {{ if (current_user.company_name === "") }}
            Company:{{= current_user.company_name }}
          {{ end }}
        </p>
        <p>
          {{ if current_user.trade === ""  }}
            Trade:{{= current_user.trade }}
          {{ end }}
        </p>
        <p>
          {{ if current_user.rate === "" }}
            Rate:{{= current_user.rate }}
            {{ end }}
        </p>
        <p>
          {{ if current_user.phone_no === "" }}
            Contact:{{= current_user.phone_no }}
          {{ end }}
        </p>
        <p>
          {{ if current_user.qualifications === ""}}
            Qualifications:{{= current_user.qualifications }}
          {{ end }}
        </p>
      </div>

