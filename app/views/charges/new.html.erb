<div class="paymentpage">

<div class="bg-music" style="display: none;">
<iframe width="480" height="300" src="https://www.youtube.com/embed/K4pHyFqy6V4?controls=0&showinfo=0&autoplay=1" frameborder="0" allowfullscreen></iframe>
</div>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <p id="amountp">You have the following outstanding<p>
      <span class="amount">Invoice: $10.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Invoice"
          data-amount="1000"
          data-locale="auto"></script>
          <%= image_tag  "cash1.jpg",  :class => 'img3' %>
          <%= image_tag  "cash2.jpg",  :class => 'img4' %>
          <%= image_tag  "cash3.jpg",  :class => 'img5' %>
          <%= image_tag  "cash4.jpg",  :class => 'img6' %>

<% end %>
</div>
